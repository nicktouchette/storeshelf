section
  header
    h1 Search
  div.panel
    input(type="text" placeholder="Find a Product")
    article
      ul
        li All
        li Category
          li Sub Category
          li Sub Category
        li Category
          li Sub Category
    p Displaying Items From .Category.
    ul.products
      li(ng-repeat="product in vm.products")
        a(ui-sref="detail({id: product._id})")
          img(src="{{product.image}}")
          h2 {{product.price | currency}}
          p {{product.name}}
